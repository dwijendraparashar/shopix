<!-- <form class="form-horizontal"> -->
<hr><br><br>  
<%= form_with(model: product, local: true, html: {class: "form-horizontal"}) do |form| %>
  <% if product.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(product.errors.count, "error") %> prohibited this product from being saved:</h2>

      <ul>
        <% product.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  <fieldset>

    <!-- Text input-->
    <div class="form-group">
      <label class="col-md-4 control-label" for="product_name">PRODUCT NAME</label>  
      <div class="col-md-4">
        <%= form.text_field :title, :class => "form-control input-md", :placeholder => "PRODUCT NAME"  %>
      </div>
    </div>

    <!-- Text input-->
    <div class="form-group">
      <label class="col-md-4 control-label" for="product_name_fr">PRODUCT DESCRIPTION FR</label>  
      <div class="col-md-4">
      <%= form.text_field :description, :class => "form-control input-md", :placeholder => "PRODUCT DESCRIPTION"  %>
        
      </div>
    </div>

    <!-- Select Basic -->
    <div class="form-group">
      <label class="col-md-4 control-label" for="product_categorie">PRODUCT CATEGORY</label>
      <div class="col-md-4">
        <%= form.select(:category_id, Category.all.collect{|m| [m.title, m.id]}, {}, :class => 'form-control genForm_dropBox') %>
      </div>
    </div>

    <!-- Text input-->
    <div class="form-group">
      <label class="col-md-4 control-label" for="available_quantity">AVAILABLE QUANTITY</label>  
      <div class="col-md-4">
        <%= form.text_field :available_item, :class => "form-control input-md", :placeholder => "AVAILABLE QUANTITY" %>
      </div>
    </div>
    <div class="form-group">
      <label class="col-md-4 control-label" for="available_quantity">PRICE</label>  
      <div class="col-md-4">
        <%= form.text_field :price, :class => "form-control input-md", :placeholder => "DISCOUNT PRICE" %>
      </div>
    </div>
    <div class="form-group">
      <label class="col-md-4 control-label" for="available_quantity">FULL PRICE</label>  
      <div class="col-md-4">
        <%= form.text_field :unit_price, :class => "form-control input-md", :placeholder => "FULL PRICE" %>
      </div>
    </div>
    <div class="form-group">
      <label class="col-md-4 control-label" for="filebutton">main_image</label>
      <div class="col-md-4">
        <%= form.file_field :image, :class => "input-file" %>
      </div>
    </div>
    <br><br><br></fieldset><hr>
    <center>
      <div class="form-group">
        <label class="col-md-4 control-label" for="filebutton"></label>
        <div class="col-md-4">
          <div class="actions">
            <%= form.submit %>
          </div>
        </div>
      </div>
    </center><hr>  
    
  </fieldset>
<% end %>